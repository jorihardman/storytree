//append newly created branch to branches
$('#branches').append('<%= escape_javascript(raw(branch(@branch))) %>');

//animate new branch
$('#<%= @branch.id %>')
  .hide()
  .slideDown('fast');

//bind events to the new branch
bindBranches();

//clear leaf form
$('#branch_leaf_text').val('');

//scroll down story div
$("#story").scrollTop($("#story")[0].scrollHeight);
