<h1>Login</h1>

<% form_for @user_session, :url => session_url do |f| %>
  <%= f.error_messages %>
  <%= f.label :login, 'Pen Name' %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>

<p>Don't have an account? <%= link_to 'Register', new_user_path %></p>
