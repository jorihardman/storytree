//append newly created branch to branches
$('#branches').append(
  "<div id='<%= @leaf.id %>' class='branch'><div class='points'>[<%= @leaf.points %>]</div><%= @leaf.leaf_text %></div>"
);

//animate new branch
$('#<%= @leaf.id %>')
  .hide()
  .slideDown('fast');

//bind events to the new branch
bindBranches();

//clear leaf form
$('#leaf_leaf_text').val('');
