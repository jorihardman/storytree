<h1><%= @leaf.root.title %></h1>

<div id='story'>
  <% @ancestors.each do |ancestor|  %>
    <div id='<%= ancestor.id %>' class='page'>
      <%= ancestor.leaf_text %>
    </div>
  <% end %>
</div>
<%= will_paginate @ancestors, :param_name => 'story_page' %>

<h3>Choose the next Leaf</h3>
<div id='branches' style='display:none;'>
  <% @branches.each do |branch| %>
    <%= render :partial => 'branch', :object => branch %>
  <% end %>
</div>
<%= will_paginate @branches, :param_name => 'branch_page' %>

<h3>Write your own Leaf</h3>
<%= form_for @branch,
  :url => forest_seed_leaf_path(params[:forest_id], params[:seed_id], params[:id]),
  :remote => true, :validations => true do |f| %>
  <div class='field'>
    <%= f.text_area :leaf_text, :rows => 5 %><br/>
  </div>
  <div class='action'>
    <%= f.submit 'Add' %>
  </div>
<% end %>
